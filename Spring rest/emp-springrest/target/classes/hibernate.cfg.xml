<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
       <property name="hibernate.connection.url">jdbc:mysql://localhost/covalense_db</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property> 
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
        <mapping
			class="com.covalense.empspringrest.dto.EmployeeInfoBean" />
		<mapping
			class="com.covalense.empspringrest.dto.EmployeeOtherInfoBean" />
		<mapping
			class="com.covalense.empspringrest.dto.EmployeeAddressInfoBean" />
		<mapping
			class="com.covalense.empspringrest.dto.EmployeeEducationalInfoBean" />
		<mapping
			class="com.covalense.empspringrest.dto.EmployeeExperienceInfoBean" />
		<mapping
			class="com.covalense.empspringrest.dto.EmployeeDepartmentInfoBean" />
		<mapping
		class="com.covalense.empspringrest.dto.EmployeeTrainingInfoBean" />
    </session-factory>
</hibernate-configuration>