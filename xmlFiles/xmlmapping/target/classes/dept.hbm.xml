<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/ Hibernate MappingDTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.covalense.xmlexample.dto.DepartmentInfoBean"
		table="department_info">
		<id name="dept_id" type="int">
			<column name="dept_id" />
			
		</id>

		<property name="dept_name" type="java.lang.String">
			<column name="dept_name" />
		</property>
	</class>
</hibernate-mapping>